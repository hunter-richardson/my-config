sudo nano ./usr/local/sbin/adduser.local
assert count $argv -eq 4
if builtin test (string match dev $argv[3])
  builtin set -l username $argv[1]
  builtin set -l home-directory $argv[4]
  command mkdir $home-directory/.config/fish $home-directory/.config/git /varlog/tmux/$username
  command scp -v /home/hunter/.config/fish/config.fish $home-directory/.config/fish/
  command scp -v /home/hunter/.config/git/config $home-directory/.config/git/
  command chown -R $username:dev $home-directory/.config/fish/config.fish
  command chown -R $username:dev $home-directory/.config/git/config
end

